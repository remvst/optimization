{
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "allowJs": false,
        "outDir": "./lib/esm",
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
